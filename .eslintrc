{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true 
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    // Formatting
    "no-trailing-spaces": 2,
    "no-var": 2,
    "no-empty": 2,
    "no-func-assign": 2,
    "eqeqeq": 2,
    "yoda": 2,
    "no-unused-vars": 1,

    // Style
    "indent": [2, "tab"],
    "brace-style": [2, "1tbs"],
    "quotes": [2, "single"],
    "object-curly-spacing": [2, "always"]
  }
}

